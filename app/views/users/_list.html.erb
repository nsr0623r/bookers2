<div class="content">
  
  <h2>User Info</h2>
  
  <div class="user-info">
    <p>name</p>
    <p><%= user.name %></p>
  </div>
  
  <div class="user-info">
    <p>introduction</p>
    <p><%= user.introduction %></p>
  </div>
  
  <% if user.id == current_user.id %>
    <p><%= link_to "編集", edit_user_path(user) %></p>
  <% end %>

  
  <h2>New book</h2>
  <div class="new-book">
    <%= form_with model:book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      
      <p>Opinion</p>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
  
</div>